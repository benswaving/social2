# AI Social Media Creator - Frontend Environment Configuration
# =============================================================

# Vite Configuration
VITE_APP_NAME=AI Social Media Creator
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3088/api
VITE_BACKEND_URL=http://localhost:3088
VITE_FRONTEND_URL=http://localhost:3089

# OAuth Redirect URIs (must match backend configuration)
VITE_INSTAGRAM_REDIRECT_URI=http://localhost:3089/auth/instagram/callback
VITE_FACEBOOK_REDIRECT_URI=http://localhost:3089/auth/facebook/callback
VITE_LINKEDIN_REDIRECT_URI=http://localhost:3089/auth/linkedin/callback
VITE_TWITTER_REDIRECT_URI=http://localhost:3089/auth/twitter/callback
VITE_TIKTOK_REDIRECT_URI=http://localhost:3089/auth/tiktok/callback
VITE_YOUTUBE_REDIRECT_URI=http://localhost:3089/auth/youtube/callback

# Public Client IDs (safe to expose in frontend)
VITE_INSTAGRAM_CLIENT_ID=your-instagram-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
VITE_TWITTER_CLIENT_ID=your-twitter-client-id
VITE_TIKTOK_CLIENT_ID=your-tiktok-client-id
VITE_YOUTUBE_CLIENT_ID=your-youtube-client-id

# Application Settings
VITE_APP_TITLE=AI Social Media Creator
VITE_APP_DESCRIPTION=AI-powered social media content creation platform
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANALYTICS=true

# Feature Flags
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_VIDEO_CONCEPTS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SCHEDULING=true
VITE_ENABLE_MULTI_ACCOUNT=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true

# Content Generation Settings
VITE_MAX_CONTENT_LENGTH=2200
VITE_DEFAULT_PLATFORM=instagram
VITE_DEFAULT_TONE=creatief

# File Upload Settings
VITE_MAX_FILE_SIZE=16777216  # 16MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Social Media Platform Settings
VITE_INSTAGRAM_MAX_LENGTH=2200
VITE_LINKEDIN_MAX_LENGTH=3000
VITE_TWITTER_MAX_LENGTH=280
VITE_FACEBOOK_MAX_LENGTH=63206
VITE_TIKTOK_MAX_LENGTH=150

# UI/UX Settings
VITE_ANIMATION_DURATION=300
VITE_TOAST_DURATION=5000
VITE_AUTO_SAVE_INTERVAL=30000  # 30 seconds

# Performance Settings
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600  # 1 hour
VITE_API_TIMEOUT=30000  # 30 seconds

# Security Settings
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=false  # Set to true in production with HTTPS
